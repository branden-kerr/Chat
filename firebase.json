{
  "emulators": {
    "firestore": {
      "port": 5002
    },
    "auth": {
      "port": 9099
    },
    "storage": {
      "port": 5004
    },
    "database": {
      "port": 9000
    },
    "ui": {
      "enabled": true
    },
    "singleProjectMode": true,
    "functions": {
      "port": 5001
    },
    "pubsub": {
      "port": 8085
    }
  },
  "firestore": {
    "rules": "./firestore.rules"
  },
  "storage": {
    "rules": "./storage.rules"
  },
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log"
      ],
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" run lint",
        "npm --prefix \"$RESOURCE_DIR\" run build"
      ]
    }
  ]
}